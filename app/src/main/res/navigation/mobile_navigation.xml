    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_news">

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.perludilindungi.ui.news.NewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_location"
        android:name="com.example.perludilindungi.ui.location.LocationFragment"
        android:label="@string/title_location"
        tools:layout="@layout/fragment_location" />

    <activity
        android:id="@+id/navigation_bookmark"
        android:name="com.example.perludilindungi.ui.bookmark.BookmarkActivity"
        android:label="@string/title_bookmark"
